<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="@color/babyblue"
        android:id="@+id/login_relativelayout1">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="22dip"
            android:textColor="@color/white"
            android:text="设置新密码"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login_relativelayout2"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/login_relativelayout1" >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/head20151023110005"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/set_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_relativelayout2"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="请输入新密码"/>
    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/set_tv"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/ip_port"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:text=""
            android:singleLine="true"
            android:textSize="16dp"
            android:background="@color/white"/>
    </LinearLayout>
    <TextView
        android:id="@+id/set_tv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLayout"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确认密码"/>
    <LinearLayout
        android:id="@+id/editLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/set_tv1"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true">

        <EditText
            android:id="@+id/ip_port1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text=""
            android:textSize="16dp" />
    </LinearLayout>
    <Button
        android:id="@+id/toSet"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@color/blue"
        android:layout_below="@+id/editLayout1"
        android:layout_alignStart="@+id/set_tv1"
        android:layout_marginTop="29dp" />
</RelativeLayout>