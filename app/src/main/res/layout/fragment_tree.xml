<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tree_spinner_relative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/sole2"
            android:layout_marginStart="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:text="点击搜索"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_qian"
            android:layout_height="match_parent"
            android:layout_marginEnd="60dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2" />
        <Button
            android:id="@+id/select1"
            android:layout_width="60dp"
            android:src="@drawable/add"
            android:text="☰"
            android:textSize="30dp"
            android:background="#F0F0F8"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tree_spinner_relative1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tree_spinner_relative"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imageV"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow1"
            android:gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/allgroup"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="全部设备"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <ListView
        android:id="@+id/addViewPaper"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:background="@color/green"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_below="@+id/tree_spinner_relative">
    </ListView>
    <ExpandableListView
        android:id="@+id/listtree"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/tree_spinner_relative1"
        android:divider="@null"
        android:childDivider="@null"
        android:dividerHeight="0dp"
        android:layout_alignParentEnd="true">
    </ExpandableListView>

</RelativeLayout>