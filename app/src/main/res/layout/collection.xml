<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background_normal">
        <RelativeLayout
            android:id="@+id/collect_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/img1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_single_control_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img1"
                android:gravity="center"
                android:text="单灯采集"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/ic_arrow_blue"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <RelativeLayout
            android:id="@+id/collect_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_multi_control_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img2"
                android:gravity="center"
                android:text="集中采集"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/ic_arrow_blue"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <RelativeLayout
            android:id="@+id/collect_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/img3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/pic_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img3"
                android:gravity="center"
                android:text="上传图片"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/ic_arrow_blue"/>
        </RelativeLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"/>
        <RelativeLayout
            android:id="@+id/collect_layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/img4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_single_control_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img4"
                android:gravity="center"
                android:text="杆号核对"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/ic_arrow_blue"/>
        </RelativeLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"/>
        <RelativeLayout
            android:id="@+id/collect_layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/img5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_multi_control_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img5"
                android:gravity="center"
                android:text="集中核对"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/ic_arrow_blue"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
