<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.administrator.light.pullToRefresh.XListView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="10dp"
            android:id="@+id/listView_detail"
            android:background="@drawable/bt_normal_border"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:background="@drawable/bt_normal_border"
            android:id="@+id/rsltListView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/btn_refDetail"
            android:background="#1BA1e2"
            android:text="刷新"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/btn_getDetailvis"
            android:background="#1BA1e2"
            android:text="获取"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>
