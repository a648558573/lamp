<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.example.administrator.light.customComponent.ShowMsgLayout
        android:id="@+id/show_concentrator_num"
        android:background="@drawable/selector_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <com.example.administrator.light.customComponent.ShowMsgLayout
        android:id="@+id/show_concentrator_name"
        android:background="@drawable/selector_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <com.example.administrator.light.customComponent.ShowMsgLayout
        android:id="@+id/show_concentrator_time"
        android:background="@drawable/selector_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <com.example.administrator.light.customComponent.ShowMsgLayout
        android:id="@+id/show_concentrator_info"
        android:background="@drawable/selector_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
