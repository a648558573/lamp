<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/grouptype"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="设备类型："
                android:textColor="#000000"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/grouptype_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="设备名："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/groupname_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="设备名"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/location_checkbox"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="位置："
                android:textColor="#000000"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="点击定位"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/location" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="中文名："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/cnname_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="中文名"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupfatype"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="父设备："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/groupfaid_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="父设备"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="设备Id："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/groupid_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="设备Id"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rodname_checkbox5"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="组织："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/orga_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="组织"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rodname_checkbox71"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="项目："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/project_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="项目"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="备注："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/remarks_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="备注"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rodname_checkbox73"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="支持协议："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/xieyi_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="协议"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rodname_checkbox33"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="设备用户排序编号："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/bianhao_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="设备用户排序编号"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="是否可用："
                android:textColor="#000000"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/availability_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rodname_checkbox7"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="批量操作总数："
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/numb_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:hint="数量"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/group_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="上传"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="@color/babyblue"/>

</LinearLayout>
