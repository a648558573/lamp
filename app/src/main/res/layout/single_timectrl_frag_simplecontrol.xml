<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame">
                <Spinner
                    android:id="@+id/set_spinner1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:entries="@array/simple_spinner4"
                    style="@android:style/Widget.Spinner"/>
                <Spinner
                    android:id="@+id/set_spinner2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:entries="@array/simple_spinner5"
                    style="@android:style/Widget.Spinner"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="开关时间段"
                    android:textSize="16dp"
                    android:textColor="#000000" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <CheckBox
                        android:id="@+id/set_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/set_bt_start1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time"
                        android:foregroundTintMode="src_in" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="16dp"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/set_bt_end1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time" />
                    <Button
                        android:id="@+id/set_bt_value1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="亮度0%"
                        android:textSize="16dp"
                        android:textColor="#ff000000"
                        android:background="@drawable/corners_white_bg"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <CheckBox
                        android:id="@+id/set_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/set_bt_start2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time"
                        android:foregroundTintMode="src_in" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="16dp"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/set_bt_end2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time" />
                    <Button
                        android:id="@+id/set_bt_value2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="亮度0%"
                        android:textSize="16dp"
                        android:textColor="#ff000000"
                        android:background="@drawable/corners_white_bg"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <CheckBox
                        android:id="@+id/set_checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/set_bt_start3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time"
                        android:foregroundTintMode="src_in" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="16dp"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/set_bt_end3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time" />
                    <Button
                        android:id="@+id/set_bt_value3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="亮度0%"
                        android:textSize="16dp"
                        android:textColor="#ff000000"
                        android:background="@drawable/corners_white_bg"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <CheckBox
                        android:id="@+id/set_checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/set_bt_start4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time"
                        android:foregroundTintMode="src_in" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="16dp"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/set_bt_end4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="00:00"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/shape_blue_time" />
                    <Button
                        android:id="@+id/set_bt_value4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="亮度0%"
                        android:textSize="16dp"
                        android:textColor="#ff000000"
                        android:background="@drawable/corners_white_bg"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:text="注：高压钠灯只有1灯共8个时段档位；LED灯1-4时段为灯1，5-8时段为灯2"
                android:textSize="16dp"
                android:textColor="#000000" />
            <Button
                android:id="@+id/btSet"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:drawableLeft="@drawable/setting"
                android:text="单控设置"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:background="@drawable/shape_blue_time" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/simple_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@android:drawable/editbox_dropdown_light_frame">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <RadioGroup
                    android:id="@+id/simple_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:drawable/editbox_dropdown_light_frame">
                    <RadioButton
                        android:id="@+id/simple_rb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:button="@null"
                        android:padding="10dp"
                        android:text="支路X-N"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:background="@drawable/selector_radiobutton_bg" />
                    <RadioButton
                        android:id="@+id/simple_rb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:button="@null"
                        android:padding="10dp"
                        android:text="自定义组"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:background="@drawable/selector_radiobutton_bg" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/editbox_dropdown_light_frame" >
                <LinearLayout
                    android:id="@+id/simple_list_title1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:text="偶"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:text="奇"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginRight="2dp"
                        android:text="终端"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="支路"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/simple_list_title2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:text="操作"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginRight="2dp"
                        android:text="组号"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="组名"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:id="@+id/simple_nolist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="暂无组表信息"
                        android:textSize="20dp"
                        android:textColor="@android:color/darker_gray"/>
                    <ListView
                        android:id="@+id/simple_list1"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                    <ListView
                        android:id="@+id/simple_list2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/bt_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="刷新"
                android:textSize="16dp"
                android:textColor="#000000"
                android:background="@color/babyblue"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>