<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/bottom1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bottom2">
            <Spinner
                android:id="@+id/chooseTimeInterval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/corners_white_bg"
                android:spinnerMode="dialog"
                android:textSize="12dp"
                ></Spinner>
            <Spinner
                android:id="@+id/chooseNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/corners_white_bg"
                android:spinnerMode="dialog"
                android:textSize="12dp"
                ></Spinner>
            <Button
                android:id="@+id/btSetRadius"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="半径 km：2"
                android:textSize="12dp"
                android:background="@drawable/corners_white_bg"/>
            <Button
                android:id="@+id/btLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="当前位置获取"
                android:textSize="12dp"
                android:background="@drawable/corners_white_bg"/>
            <Button
                android:id="@+id/btGetCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="屏幕中点获取"
                android:textSize="12dp"
                android:background="@drawable/corners_white_bg"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/babyblue">
            <Button
                android:id="@+id/map_bottom_bu1"
                android:background="@color/babyblue"
                android:text="详情"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/map_bottom_bu2"
                android:background="@color/babyblue"
                android:textColor="@color/white"
                android:text="控制"
                android:textSize="17dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/map_bottom_bu3"
                android:background="@color/babyblue"
                android:text="导航"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/fragment_map_mapview"
        android:layout_above="@id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <!--<com.baidu.mapapi.map.TextureMapView-->
    <!--android:id="@+id/fragment_map_mapview"-->
    <!--android:layout_above="@id/bottom"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="fill_parent"-->
    <!--android:clickable="true" />-->

</RelativeLayout>
